@using Microsoft.AspNetCore.Identity
@using PHOTOSHARE.Areas.Identity.Data

@inject SignInManager<PHOTOSHAREUser> SignInManager
@inject UserManager<PHOTOSHAREUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{               
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">@Html.ActionLink("Create Album  ", "", "", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("View Albums   ", "GetAlbums", "Home", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Edit Album  ", "", "", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Share Album  ", "", "", new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Delete Album  ", "", "", new { @class = "nav-link" })</li>
            </ul>
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}

</ul>
